<!-- 
Index page, the "default" page when you visit "http://localhost/" 
 without any URL parameters at the end
 -->
{% extends 'base.jinja' %}


{% block content %}
    <h1>Hello! Welcome to the site!</h1>
    {% if session['user_id'] %}
        <!-- Show links when user is logged in -->
        <p><a href={{ url_for('home') }}>Home</a></p>
        <p><a href={{ url_for('add_friend_form') }}>Add a Friend</a></p>
        <p><a href={{ url_for('friend_requests') }}>View Friend Requests</a></p>
        <p><a href={{ url_for('logout') }}>Logout</a></p>
    {% else %}
        <!-- Show these links when no user is logged in -->
        <p><a href={{ url_for('signup') }}>Sign Up</a></p>
        <p><a href={{ url_for('login') }}>Login</a></p>
    {% endif %}
{% endblock %}

